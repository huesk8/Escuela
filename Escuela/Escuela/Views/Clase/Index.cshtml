@model IEnumerable<Modelado.Clase>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table border="1">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id_clase)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.clase)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
         using (Html.BeginForm("Delete", "Clase", new { id = item.id_clase }))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_clase)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.clase)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.id_clase  }) |
               <input type="submit" value="Delete" onclick="return confirm('Deseas Eliminar a @item.clase')" />
            </td>
        </tr>
    }
    }
    </table>
</body>
</html>
